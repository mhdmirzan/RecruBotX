# Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# MongoDB Configuration (Atlas example)
# SRV string is recommended for Atlas clusters
MONGODB_URL=mongodb+srv://<username>:<password>@<cluster-host>/<dbname>?retryWrites=true&w=majority
MONGODB_DB_NAME=recrubotx

# Server Configuration
HOST=0.0.0.0
PORT=8000

# App Environment
# Set to production on deployment so OTP sending fails fast if misconfigured.
APP_ENV=development

# Email OTP Provider (API-based, no SMTP)
# Options: brevo | resend
# If empty, the backend auto-picks based on which API key is present.
EMAIL_PROVIDER=brevo

# Brevo (Sendinblue) - free tier available
BREVO_API_KEY=your_brevo_api_key_here
EMAIL_FROM_EMAIL=your_verified_sender@yourdomain.com
EMAIL_FROM_NAME=RecruBotX

# Resend - free tier available (may require domain verification for custom from)
RESEND_API_KEY=your_resend_api_key_here
RESEND_FROM=RecruBotX <onboarding@resend.dev>
